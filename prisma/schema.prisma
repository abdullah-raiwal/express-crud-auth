generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Note {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  importtant  Boolean
  priority    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String   @db.ObjectId
}

model User {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  username        String  @unique
  email           String  @unique
  password        String
  imageUrl        String?
}
