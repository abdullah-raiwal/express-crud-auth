generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Note {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  importtant  Boolean
  priority    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
